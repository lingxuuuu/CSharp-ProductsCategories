@model Wrapper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Product.Name</title>
</head>
<body>
    <header>
        <h1>@Model.Product.Name</h1>
        <a href="/products">Home</a>
    </header>
    <main>
        <section>
            <h3>Categories:</h3>
            @foreach (Association association in Model.Product.Categories)
            {
                <li>@association.Category.Name</li>
            }
        </section>
        <section>
            <h3>Add Category:</h3>
            <form asp-action="AddCategory" asp-controller="Home" asp-route-id="@Model.Product.ProductId">
                <select asp-for="Association.CategoryId">
                    @foreach (Category category in Model.AllCategories)
                    {
                        <option value="@category.CategoryId">@category.Name</option>
                    }
                </select>
                <button>Add Category</button>
            </form>
        </section>
    </main>
</body>
</html>